@using DasGlobal.Classes
@{
    var title = (string)ViewBag.Title;
    var utils = new Utils();
}
<!DOCTYPE html>
<html lang="es-gt">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@title</title>
    <!-- Icons-->

    <link rel="stylesheet" href="/Content/css/vendors/styles.min.css">
    <link rel="stylesheet" href="/Content/css/vendors/theme.min.css">
    <link rel="shortcut icon" href="/Images/logo.png" type="image/x-icon">
    <link rel="icon" href="/favicon.ico" type="image/x-icon">
</head>

<body class="body-skin blue-grey lighten-5 mdb-skin sidebar-collapse sidebar-mini layout-fixed layout-navbar-fixed pace-running pace-done">
<!-- Site wrapper -->
<div class="wrapper">
    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-config blue darken-4 text-white">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#">
                    <i class="fas fa-bars fa-lg text-white"></i>
                </a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <span class="nav-link">DAS GLOBAL, S. A.</span>
            </li>
        </ul>


        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto " id="LoginInfo">

        </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar layout-fixed sidebar-light-primary elevation-4 z-depth-1 ">
        <!-- Sidebar -->
        <div class="sidebar scrollbar-skin thin">
            <!-- Sidebar user (optional) -->
            <div class="user-panel d-flex ">
                <div class="image pl-1">
                    <img style="min-width: 45px;" src="/Images/logo.png" alt="Imagen de la empresa">
                </div>
                <div class="info ml-2 w-100">
                    <div class="text-center my-0 py-0">
                        <a class="btn btn-block btn-sm btn-outline-primary" href="/Home" data-title="Inicio" type="button" >
                            <i class="fas fa-home"></i> Inicio
                        </a>
                    </div>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul id="sideNavMenu" class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">

                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Main content -->
        <section class="content">

            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12 mt-3 pl-0 pr-0" id="renderBodyContainer">
                        @RenderBody()
                    </div>
                    <div class="col-md-12" id="htmlContainer"></div>
                </div>
            </div>

        </section>
        <!-- /.content -->
        <div id="modalsContainer"></div>
    </div>
    <!-- /.content-wrapper -->


    <footer class="main-footer mt-1 footer-config blue darken-4 text-white">
        <strong>Ing. Claudio Morales &copy; @utils.Now().Year </strong>
    </footer>

</div>
<!-- ./wrapper -->


<!-- Control Sidebar -->
<aside class="control-sidebar  control-sidebar-light">
    <!-- Control sidebar content goes here -->
</aside>
<!-- /.control-sidebar -->


<script src="/Content/js/vendors/vendors.min.js"></script>
<script src="/Content/js/scripts/base/app.js"></script>
<script src="/Content/js/scripts/base/base.js"></script>
<script src="/Content/js/scripts/base/base-context.js"></script>
<script src="/Content/js/scripts/base/utils.js"></script>
<script src="/Content/js/scripts/base/custom-sweetalert2.js"></script>
<script src="/Content/js/scripts/base/forms-manager.js"></script>
<script src="/Content/js/scripts/base/layout.js"></script>
<script src="/Content/js/scripts/tables/tables-manager.js"></script>
<script src="/Content/js/scripts/tables/tables-manager-keys.js"></script>
<script src="/Content/js/scripts/tables/tables-manager-data-convert.js"></script>

<script>
    var layout = new Layout();
</script>

@RenderSection("scripts", false)

<script src="/Content/after-init-plugins.js"></script>
</body>
</html>